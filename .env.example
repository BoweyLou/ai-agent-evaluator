# Application
NODE_ENV=development
SECRET_KEY=your-secret-key-here
API_URL=http://localhost:8080

# Port Configuration (Updated to avoid conflicts)
API_PORT=8080
WEB_PORT=3001
DB_PORT=5433
REDIS_PORT=6380

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=evaluator
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Cache
REDIS_URL=redis://redis:6379

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-your-key-here

# GitHub Configuration
GITHUB_TOKEN=ghp_your-token-here
GITHUB_REPO=BoweyLou/ai-agent-evaluator
GITHUB_BRANCH_PREFIX=eval

# Security
JWT_SECRET=your-jwt-secret-here
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8080

# Evaluation Settings
MAX_EVALUATION_TIME=3600
MAX_CONCURRENT_EVALUATIONS=5
DEFAULT_AI_JUDGE_MODEL=claude-3-sonnet

# File Storage
UPLOAD_MAX_SIZE_MB=50
RESULTS_RETENTION_DAYS=90